# Server settings
HTTP_SECURE=False               # Use HTTPS (True or False)
HOST=localhost                  # Server host address
PORT=8000                       # Server port
DEBUG=True                      # Debug mode (True or False)
RELOAD=True                     # Enable auto-reload (True or False)

# MQTT settings
MQTT_SECURE=False               # Use secure MQTT (True or False)
MQTT_BROKER=localhost           # MQTT broker address
MQTT_PORT=1883                  # MQTT port
MQTT_WS_PORT=9001               # MQTT WebSocket port
MQTT_URI=mqtt                   # MQTT URI
MQTT_FE_USER=frontend           # MQTT frontend user
MQTT_FE_PASS=The2password.      # MQTT frontend password
MQTT_BO_USER=backoffice         # MQTT backoffice user
MQTT_BO_PASS=The2password.      # MQTT backoffice password
MQTT_BE_USER=backend            # MQTT backend user
MQTT_BE_PASS=The2password.      # MQTT backend password

# Game settings
TRACK_LENGTH=5.0                # Length of the game track
MAX_PLAYERS=2                   # Maximum number of players

# File paths
ASSETS_FOLDER=assets            # Folder for assets
DATA_FOLDER=data                # Folder for data

# MQTT topics
MQTT_TOPIC_BASE=brawlifics      # Base topic for MQTT
CHALLENGE_TOPIC={base}/game/{game_id}/player/{player_id}/challenge
RESULT_TOPIC={base}/game/{game_id}/player/{player_id}/result
PLAYER_TOPIC={base}/game/{game_id}/player/{player_id}
GAME_STATUS_TOPIC={base}/game/{game_id}/status
GAME_WINNER_TOPIC={base}/game/{game_id}/winner
GAME_PLAYERS_TOPIC={base}/game/{game_id}/players

# Logging settings
LOG_LEVEL=INFO                  # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s  # Log format
